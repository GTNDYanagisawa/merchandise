<?xml version="1.0" encoding="UTF-8"?>
<list-view unassigned-group-name="Other" header-popup-bean="listViewMenuPopupBuilderWithClassification">
	<group name="General">
		<custom class="de.hybris.platform.cockpit.services.config.impl.LineNumberColumn" name="Line nr" visible="true" selectable="true"/>
		<property qualifier="product.thumbnail" editor="simpleMediaReferenceSelector" visible="true">
			<renderer class="de.hybris.platform.cockpit.model.listview.impl.ImageCellRenderer"/>	
		</property>
		<property qualifier="Product.code" visible="true"/>
		<property qualifier="Product.name" visible="true" editable="true">
			<language isocode="en"/>
			<language isocode="de"/>
		</property>
		<property qualifier="Product.catalogVersion" visible="true" editable="false"/>
		<property qualifier="Product.ean" visible="false" editable="true"/>
		<property qualifier="Product.manufacturerName" visible="false" editable="true"/>
		<property qualifier="Product.description" visible="false" editable="true"/>		
		<group name="Unit">
			<label key="config.general.units" />
			<property qualifier="Product.unit" editable="true"/>
		</group>				
	</group>
</list-view>
